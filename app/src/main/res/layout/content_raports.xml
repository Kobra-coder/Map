<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientlogin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Raports.RaportsActivity"
    tools:showIn="@layout/activity_raports">

    <ImageView
        android:id="@+id/imgTransactionAmount"
        android:layout_width="134dp"
        android:layout_height="112dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_attach_money_black_24dp" />

    <TextView
        android:id="@+id/tv_RaportAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="20dp"
        android:text="@string/raport_amount"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTransactionAmount" />

    <ImageView
        android:id="@+id/imgRaportSend"
        android:layout_width="122dp"
        android:layout_height="88dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_RaportAmount"
        app:srcCompat="@drawable/cash" />

    <TextView
        android:id="@+id/tv_RaportSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:text="@string/raport_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgRaportSend" />

    <Button
        android:id="@+id/btnRaportAmount"
        android:layout_width="173dp"
        android:layout_height="167dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="124dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRaportSend"
        android:layout_width="210dp"
        android:layout_height="142dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_RaportAmount" />
</androidx.constraintlayout.widget.ConstraintLayout>