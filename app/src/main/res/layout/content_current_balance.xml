<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/watercolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CurrentBalanceActivity"
    tools:showIn="@layout/activity_current_balance">

    <ImageView
        android:id="@+id/imgPig2"
        android:layout_width="244dp"
        android:layout_height="151dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="84dp"
        android:src="@drawable/wallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentBalance2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPig2"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:text="@string/current_balance"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPig2" />

    <TextView
        android:id="@+id/sold2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentBalance2"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="372dp"
        android:text="10000"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/euro2"
        android:layout_width="58dp"
        android:layout_height="41dp"
        android:layout_below="@+id/currentBalance2"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="210dp"
        android:layout_marginTop="360dp"
        android:src="@drawable/eurotransparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="128dp"
        android:layout_height="51dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/refresh"
        android:text="@string/refresh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/euro2" />


</androidx.constraintlayout.widget.ConstraintLayout>